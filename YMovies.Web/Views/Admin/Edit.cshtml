@model YMovies.Web.Models.AdminViewModels.ManageUserRightsViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Users</h2>

@using (Html.BeginForm("ConfirmEdit", "Admin"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Roles, htmlAttributes: new { @class = "form-label col-md-2" })
            <div class="col-md-10">
                <ul>
                    @foreach (var role in Model.Roles)
                    {
                        <li>@role</li>
                    }
                </ul>
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                @Html.CheckBox("adminRights", false, htmlAttributes: new { @class = "form-check-input" })
                @if (Model.Roles.Contains("admin"))
                {
                    <label class="form-check-label" for="rightsCheckBox">
                        Remove admin rigths from this user
                    </label>
                }
                else
                {
                    <label class="form-check-label" for="rightsCheckBox">
                        Give admin rights to this user
                    </label>
                }
            </div>
        </div>
        @Html.HiddenFor(model => model.Email)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Comeback to searching movies", "Index", "Home")
</div>
