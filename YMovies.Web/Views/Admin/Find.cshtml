@model YMovies.Web.Models.AdminViewModels.FindModel
@{
    ViewBag.Title = "ManageUsers";
}

<h2>Manage Users</h2>

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Enter useremail to start editing his role</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => Model.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, "example@gmail.com", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-default" value="Find" />
        </div>
    </div>
}