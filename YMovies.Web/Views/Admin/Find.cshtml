@model YMovies.Web.Models.AdminViewModels.ManageUsersViewModel
@{
    ViewBag.Title = "ManageUsers";
}

<h2>Manage Users</h2>

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @class = "form-inline", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Enter useremail to start editing his role</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.Label("User email", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBox("Email", "example@gmail.com", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-default" value="Find" />
        </div>
    </div>
}