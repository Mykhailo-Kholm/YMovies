<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - YMovies</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="container-fluid">
            @Html.ActionLink("YMovies", "Index", "Movies", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <form asp-controller="Movies" asp-action="Search">
                    <div class="input-group">
                        <input class="form-control me-2" type="text" name="SearchString" />
                        <button class="btn btn-outline-success" type="submit" value="Search">Search</button>
                    </div>
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Most liked", "MostLiked", "Movies", null, new { @class = "nav-link active" })</li>
                    <li class="nav-item">@Html.ActionLink("Most watched", "MostWatched", "Movies", null, new { @class = "nav-link active" })</li>
                    <li class="nav-item">@Html.ActionLink("Top 250 by IMDb", "TopByIMDb", "Movies", null, new { @class = "nav-link active" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link active" })</li>
                </ul>
            </div>
            @Html.Partial("_UserPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
