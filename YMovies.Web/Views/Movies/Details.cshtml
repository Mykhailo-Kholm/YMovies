@using Microsoft.Ajax.Utilities
@model YMovies.Web.TempModels.Movie

@{
    ViewBag.Title = "MovieDetails";
}

<div>
    @Model.Title
</div>
<div style="float:left;">
    <img src="@Url.Content("~/Content/Images/film.png")" class="postr" height="150" width="143" />
</div>
<div>
    <span>
        Year: @Model.Year
    </span>
</div>
<div>
    <span>
        Genres:
        @foreach (var genre in Model.Genres)
        {
            @genre.Name
        }
    </span>
</div>
<div>
    <span>
        Type: @Model.Type
    </span>
</div>
<div>
    <span>
        Countries:
        @foreach (var country in Model.Countries)
        {
            @country.Name
        }
    </span>
</div>
<div>
    <span>
        Cast:
        @foreach (var cast in Model.Cast)
        {
            @cast.Name @cast.Surname

        }
    </span>
</div>
<div>
    <span>
        Plot: @Model.Plot
    </span>
</div>
<div>
    <span>
        Rating IMDb: @Model.ImdbRating
    </span>
</div>
<div>
    <span>
        Site users rating: @Model.UsersRating
    </span>
</div>
@if (User.Identity.IsAuthenticated)
{
    <div>
        <span>
            @Html.ActionLink("Like", "Like", "Movies",Model.MovieId, new { @class = "btn btn-primary" })
            @Html.ActionLink("Dislike", "DisLike", "Movies", Model.MovieId, new { @class = "btn btn-primary" })
        </span>
    </div>
    <div>
        <span>
            Mark as watched: @Html.CheckBoxFor(m => m.IsWatched)
        </span>
    </div>
}
