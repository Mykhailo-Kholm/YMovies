@model YMovies.Web.ViewModels.MovieViewModel
@using Microsoft.AspNet.Identity
@using YMovies.Web.Utilites.Pagination

<h2 align="center">List of Watched media</h2>
<link href="~/Content/MainPage.css" rel="stylesheet" />
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<div>
    @foreach (var film in Model.Movies)
    {

        <div class="movie-card">
            <div class="movie-header theDarkTower">
                <a href="@Url.Action("Details", "Movies", new { filmid = film.MediaId, imdbid=film.ImdbId})">
                    <img src="@Html.Raw(film.PosterUrl)" class="movie-header theDarkTower">
                </a>
            </div><!--movie-header-->
            <div class="movie-content">
                <div class="movie-content-header">
                    <a href="#">
                        <h3 class="movie-title">
                            @film.Title
                        </h3>
                    </a>
                </div>
                <div class="movie-info">
                    <div class="info-section">
                        <label>IMDb Rating</label>
                        <span>@film.ImdbRating</span>
                    </div>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.PageLinks(Model.Pagination, x => Url.Action("WatchedMedias", new { page = x }))
    </div>
</div>